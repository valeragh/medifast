= render "layouts/clinic_phone"
%section.content-section.article
  .section-wrapper
    = link_to doctors_path, class: "back-link" do
      %span.icon
      Весь персонал
    .left-section
      %aside.article-aside
        = image_tag "#{@doctor.image_url}", class: "aside-content"
    .right-section
      %article.article-template
        %h2.section-heading
          = @doctor.name
        %h3.section-heding
          = @doctor.position
        .page
          .layoutArea
            .column
            %p
              = @doctor.clinic.address
            %p
              = @doctor.description.html_safe
            %p
            - @certificates.each do |certificate|
              = image_tag certificate.image_url_url.to_s, class: "service-image"
= render "layouts/record"
