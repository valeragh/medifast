%section.main-content-section.share-decisions
  .section-wrapper
    - @clinics_show.each do |clinic|
      %article.triple-column
        %i.fa.fa-phone-square.fa-2x
        %h3.sub-heading.contacts
          = clinic.city.name
        %p
          = clinic.contacts.html_safe
= render "news/slide"
= render "news/nav"
%section.content-section.newsfeed.active#newsfeed
  #newsfeedBody.section-wrapper
    - @posts.each do |post|
      %article.newsfeed-article.news-end-events
        = link_to show_news_path(post[:slug]), class: "newsfeed-link" do
          = image_tag "#{post.image_url}", class: "newsfeed-image"
        .container
          = link_to show_news_path(post[:slug]), class: "newsfeed-link" do
            %h2.sub-heading
              = post.name
          %p.paragraph
            = post.title.html_safe
          = link_to show_news_path(post[:slug]), class: "newsfeed-link" do
            %span.case-studies-icon.black
            Узнайте больше

- content_for :scripts do
  :javascript
    Newsfeed.init();
