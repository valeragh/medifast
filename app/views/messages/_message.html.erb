<li class="<%=  self_or_other(message) %>">
  <div class="avatar">
    <% if message.user.image_url? %>
      <%= image_tag "#{message.user.image_url}", style: "width:50px;" %>
    <% else %>
      <%= image_tag "default-avatar.jpg", style: "width:50px;" %>
    <% end %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
      <%= message_interlocutor(message).email %> â€¢ <%= message.created_at.strftime("%H:%M") %>
    </time>
  </div>
</li>
